////////////////////////////////////////////////////////////////////////////////
// Free function templates
////////////////////////////////////////////////////////////////////////////////

template<typename... Args>
void
Log(LogLevel_t logLevel, Args const&... args)
{
  auto& logger = Logger::GetInstance();

  logger.SetLogLevel(logLevel);

  auto& ss = logger.GetLogStringStream();
  (ss << ... << args) << "\n";

  logger.WriteLog();
}

NAMESPACE_END(Logger)
